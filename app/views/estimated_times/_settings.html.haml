%p
  %label= "Количество часов в рабочем дне"
  = text_field_tag("settings[work_hours_per_day]", (@settings[:work_hours_per_day].to_s rescue nil), :style => 'text-align: right;') + 'ч.'

%p
  %label= "Минимальный процент заполнения графы факт"
  = text_field_tag("settings[min_unfilled_percent]", (@settings[:min_unfilled_percent].to_s rescue nil), :style => 'text-align: right;') + '%'
%p
  %label= "Сдвиг в минутах для google calendar"
  = text_field_tag("settings[google_time_fix]", (@settings[:google_time_fix].to_s rescue nil), :style => 'text-align: right;') + 'мин'

%p
  %label= l(:label_confirm_time_period)    
  = select_tag("settings[confirm_time_period]", options_for_select(PlanningConfirmation.confirm_time_period, (@settings[:confirm_time_period] || nil) ), :prompt => t(:prompt_please_select), :multiple => false)
%p
  %label= l(:label_kgip_role)
  = select_tag("settings[kgip_role_id]", options_for_select(Role.all.map{|role| [role.name, role.id]}, (@settings[:kgip_role_id] || nil) ), :prompt => t(:prompt_please_select), :multiple => false)
%p
  = content_tag(:label, l(:label_no_time_issue_statuses))
  = select_tag("settings[issue_statuses]", options_from_collection_for_select(IssueStatus.all, :id, :name, @settings[:issue_statuses] && @settings[:issue_statuses].to_a || [IssueStatus.default]), :multiple => true)
%p
  = content_tag(:label, l(:label_new_issue_status))
  = select_tag("settings[new_issue_status]", options_from_collection_for_select(IssueStatus.all, :id, :name, @settings[:new_issue_status] && @settings[:new_issue_status].to_i || IssueStatus.default), :prompt => t(:prompt_please_select), :multiple => false)
%p
  = content_tag(:label, l(:label_in_work_issue_status))
  = select_tag("settings[in_work_issue_status]", options_from_collection_for_select(IssueStatus.all, :id, :name, @settings[:in_work_issue_status] && @settings[:in_work_issue_status].to_i || IssueStatus.default), :prompt => t(:prompt_please_select), :multiple => false)
