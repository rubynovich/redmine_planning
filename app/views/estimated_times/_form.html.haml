= error_messages_for 'estimated_times'
= back_url_hidden_field_tag

.box.tabular
  %p
    - if @assigned_issues.blank?
      = f.text_field :issue_id, :size => 6
      %em= h("#{@time_entry.issue.tracker.name} ##{@time_entry.issue.id}: #{@time_entry.issue.subject}") if @time_entry.issue
    - else
      = f.select :issue_id, @assigned_issues.map{ |i| [h("#{i.tracker.name} ##{i.id}: #{i.subject}"), i.id] }

  %p
    = f.text_field :spent_on, :size => 10, :required => true
    = calendar_for('time_entry_spent_on')
  %p
    = f.text_field :hours, :size => 6, :required => true
  %p
    = f.text_field :comments, :size => 100
  %p
    = f.select :activity_id, activity_collection_for_select_options(@time_entry), :required => true
